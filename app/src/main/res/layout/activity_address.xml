<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oukenghua.maphelper.Activity.AddressActivity">

    <View
        android:id="@+id/my_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/Black" />

    <android.support.v7.widget.Toolbar
        app:title=" "
        android:id="@+id/toolbar"
        android:background="@color/Black"
        app:titleTextColor="@color/White"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="地址详细信息"
            android:layout_gravity="center"
            android:textColor="@color/White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
            android:orientation="vertical"
            android:background="#f1f5f7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="@drawable/img_background"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/community_image"
                    android:layout_above="@+id/top_address_tv"
                    android:src="@drawable/community_picture1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/top_address_tv"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/White"
                    android:background="@color/Black"
                    android:text="福州市仓山区长安路89号"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </RelativeLayout>

            <LinearLayout
                android:background="@color/White"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon_navigation"
                        android:layout_margin="5dp"
                        android:src="@drawable/navigation"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/bottom_address_tv"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/icon_navigation"
                        android:layout_toLeftOf="@+id/address_qcode"
                        android:textSize="18sp"
                        android:textColor="@color/Black"
                        android:text="福州市仓山区长安路89号原建专教工宿舍1座2梯"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/address_qcode"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/qcode32"
                        android:text="地址二维码"
                        android:textSize="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/btn_first"
                        android:gravity="center"
                        android:background="@drawable/tv_round_blue"
                        android:textColor="#0f7aff"
                        android:text="进入梯位"
                        android:textSize="15sp"
                        android:layout_width="90dp"
                        android:layout_height="25dp" />

                    <TextView
                        android:id="@+id/btn_second"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/tv_round_blue"
                        android:textColor="#0f7aff"
                        android:text="返回上级"
                        android:textSize="15sp"
                        android:layout_width="90dp"
                        android:layout_height="25dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/address_security"
                    android:textColor="#999999"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="公安管辖：对湖派出所程厝社区警务网络"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#999999"
                        android:text="社区民警："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/address_policemen"
                        android:textColor="@color/Blue"
                        android:text="李勤\n吴恒强"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/tv_form"
                        android:drawableTop="@drawable/bell"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="警情播报"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <TextView
                        android:padding="10dp"
                        android:background="@drawable/tv_form"
                        android:drawableTop="@drawable/house"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:text="房屋出租"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:padding="10dp"
                        android:background="@drawable/tv_form"
                        android:drawableTop="@drawable/phone"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:text="一键报警"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="10dp"
                        android:background="@drawable/tv_form"
                        android:drawableTop="@drawable/management"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:text="公安管理"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:padding="10dp"
                        android:background="@drawable/tv_form"
                        android:drawableTop="@drawable/wechat"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:text="微信交友"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:padding="10dp"
                        android:background="@drawable/tv_form"
                        android:drawableTop="@drawable/security"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:text="物业管理"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>
